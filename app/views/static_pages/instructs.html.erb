<h1>Instructor</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Enrolled | </th>
      <th>Assignments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.enrolls.count %></td>
        <td><%= course.assignments.count %></td>
        <td><%= link_to 'Show', course %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', courses_path %>
