<p id="notice"><%= notice %></p>

<h1>Enrolls</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Instructor</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.course.name %></td>
        <td><%= enroll.course.user.name %></td>
        <td><%= Grade.where(user_id: current_user.id, assignment_id: enroll.course.assignments).sum(:earned_credit) %> / 
        <%= enroll.course.assignments.sum(:full_credit) %></td>

        <td><%= link_to 'Show', enroll.course %></td>
        <td><%= link_to 'Unenroll', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enroll', new_enroll_path %>
